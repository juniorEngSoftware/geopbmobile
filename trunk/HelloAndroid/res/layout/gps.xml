<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/gpsActivity_layout"	
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView 
			android:id="@+id/retrieve_location_instruction"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Clique no botao para recuperar localização"/>
			
		<Button
			android:id="@+id/retrieve_location_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/location_button"/>

		<TextView 
			android:id="@+id/retrieve_location_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		
</LinearLayout>